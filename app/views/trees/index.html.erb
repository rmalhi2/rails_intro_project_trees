<%# <h1>Trees#index</h1>
<p>Find me in app/views/trees/index.html.erb</p> %>


<div class="container">
  <h1 class="mt-5 mb-4">Trees in Winnipeg</h1>
  <style>
    .custom-link {
      color: black;
    }
  </style>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>Botanical Name</th>
            <th>Common Name</th>
            <th>Location Class</th>
          </tr>
        </thead>
        <tbody>
          <% @trees.each do |tree| %>
            <tr>
              <td><%= link_to tree.botanical_name, tree_path(tree), class: "custom-link" %></td>
              <td><%= tree.common_name %></td>
              <td><%= tree.location_class %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>